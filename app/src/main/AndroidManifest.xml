<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hustunique.jianguo.dribile">

    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.hustunique.jianguo.dribile.app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.DesignDemo">

        <!-- provider -->
        <provider
            android:name="com.hustunique.jianguo.dribile.dao.DataProvider"
            android:authorities="us.driclient.provider"
            android:exported="false">
            <grant-uri-permission android:pathPattern=".*" />
        </provider>

        <activity
            android:name="com.hustunique.jianguo.dribile.ui.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.DesignDemo.Main" />
        <activity
            android:name="com.hustunique.jianguo.dribile.ui.activity.LoginActivity"
            android:theme="@style/Base.Theme.DesignDemo.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hustunique.jianguo.dribile.ui.activity.BaseActivity" />
        <activity
            android:name="com.hustunique.jianguo.dribile.ui.activity.AuthActivity"
            android:theme="@style/Base.Theme.DesignDemo.Auth" />

        <service android:name="com.hustunique.jianguo.dribile.am.DribbbleAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <activity
            android:name="com.hustunique.jianguo.dribile.ui.activity.ShotInfoActivity"
            android:theme="@style/Base.Theme.DesignDemo.ShotInfo" />
        <activity
            android:name="com.hustunique.jianguo.dribile.ui.activity.ImageDetailActivity"
            android:theme="@style/Base.Theme.DesignDemo.ImageDetail" />
        <activity android:name="com.hustunique.jianguo.dribile.ui.activity.ProfileActivity">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://www.example.com/gizmosâ€ -->
                <data android:scheme="https"
                    android:host="dribbble.com"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.hustunique.jianguo.dribile.ui.activity.ShotCommentActivity"
            android:label="@string/title_activity_shot_comment"
            android:theme="@style/Base.Theme.DesignDemo.BaseActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.hustunique.jianguo.dribile.ui.activity.ShotBucketActivity"
            android:theme="@style/Base.Theme.DesignDemo.ShotBucket" />
        <activity
            android:name="com.hustunique.jianguo.dribile.ui.activity.BucketDetailActivity"
            android:theme="@style/Base.Theme.DesignDemo.BucketDetail" />
        <activity
            android:name="com.hustunique.jianguo.dribile.ui.activity.ShotListActivity"
            android:theme="@style/Base.Theme.DesignDemo.ShotList" />
        <activity android:name="com.hustunique.jianguo.dribile.ui.activity.LikeListActivity"
            android:theme="@style/Base.Theme.DesignDemo.LikeList"/>
    </application>

</manifest>